<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".AboutUs"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="20pt"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/raleway_black"
        android:layout_marginTop="@dimen/margin_20dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/raleway_semibolditalic"
                android:layout_margin="@dimen/margin_20dp"
                android:justificationMode="inter_word"
                android:textSize="8pt"
                android:gravity="left"
                android:text="About TicTacToe:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:justificationMode="inter_word"
                android:fontFamily="@font/raleway_medium"
                android:gravity="center"
                android:text="@string/about_tictactoe"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visit Social Media (Swarup Paul):"
                    android:textSize="8pt"
                    android:fontFamily="@font/raleway_semibolditalic"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/sfb"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/fb"
                        android:layout_marginRight="20dp"/>
                    <ImageView
                        android:id="@+id/sinsta"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/insta"/>
                    <ImageView
                        android:id="@+id/slkdn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/lkdn"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"/>
                    <ImageView
                        android:id="@+id/sgit"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/git"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Swarup Paul:"
                    android:textSize="8pt"
                    android:fontFamily="@font/raleway_semibolditalic"
                    android:textColor="@color/white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:layout_marginLeft="@dimen/margin_20dp"
                    android:layout_marginRight="@dimen/margin_20dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/mail_us"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/mail" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/raleway_semibolditalic"
                android:layout_marginTop="30dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:textSize="20pt"
                android:gravity="center"
                android:text="Thank You ❤️"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/raleway_regular"
                android:text="Develop By:"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/raleway_bold"
                android:textSize="10pt"
                android:text="Swarup Paul"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_20dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>